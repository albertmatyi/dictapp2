.editor-textarea {
	min-height: 20vh;
	height: 200px;
	max-height: 80vh;
	width: 100%;
	border: solid 1px lighten(@gray, 60%);
	.form-control-focus();
}
.editor-wrapper {
	.position(0,0,0,0,fixed);
	background-color: rgba(0, 0, 0, 0.3);
	z-index: @z-editor;
	.editor {
		background-color: #fff;
		.position(30px,30px,1em,30px);
		overflow: auto;
	}
	.footer { 
		background-color: #fff;
		.position(auto,30px,0px,30px);
	}
}