body.no-scroll {
	overflow: hidden;
}

.background {
	.position(0,0,0,0,fixed);
	z-index: @z-background;
	background-image: url(/imgs/paper.png);
	.overlay {
		.position(0,0,0,0, absolute);
		#gradient.radial(rgba(255,255,255, .9), rgba(255,255,255, .7));
	}
}
.container.main {
	position: relative;
	margin-top: 4em;
	z-index: @z-content;
}
.navbar {
	z-index: @z-header;
}